 INSERT INT tablecommandes : ( costumer_id;product_id;quantity;orderdate) ( 1;2;3;'2023-01-22') (2;1;10;'2023-04-14') 
                    
                    
 UPDATE tablecommandes=" new quantity" où quantity= 6
                    
