
CREATE TABLE client 
costumer_id : int et PRIMARY KEY
nom :varchar (n)
adresse : varchar (n)
ADD countraint PK_costumer primary key ( costumer_id )


CREATE TABLE produit 
product_id : int et PRIMARY KEY
nom : varchar
prix : decimal et CHECK > 0
ADD countraint chk_produitprix CHECK > 0 


CREATE TABLE commandes 
order_id : int et PRIMARY KEY
costumer_id: int et FOREIGN KEY(references à la clée primaire de la table client)
product_id : int et FOREIGN KEY( references à la clée ptimaire de la table produits)
quantite : int 
order date :DATE
ADD countraint FOREIGN KEY(product_id)references identity (product_id) 

              
INSERT INT tableproduit :( name;price ) ( cookies;10) ( candy;5,2)
                    
